@model Employee.Frontend.Models.State

@{
    if (ViewBag.ButtomText=="Save")
    {
        ViewData["Title"] = "Edit" + Model.StateName;

    }
    else
    {
        ViewData["Title"] = "CreateState";
    }
    if (ViewBag.ButtomText == "Save")
    {
        <h1> Edit Tinfo Of @Model.StateName</h1>
    }
    else
    {
        <h1> Create New State</h1>
    }


    
}



<h4>State</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="StateName" class="control-label"></label>
                <input asp-for="StateName" class="form-control" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <input asp-for="CountryId" class="form-control" />
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewBag.ButtomText" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
